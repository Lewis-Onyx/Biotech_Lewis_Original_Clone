{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#post}}
  <header class='c-page-header'>
    <div class='o-grid o-grid--2-columns'>
      <div>
        <h1 class='c-topper__headline u-font-headline u-font-family-sansSerif'>{{ title }}</h1>
      </div>
    </div>
  </header>
{{/post}}

{{!-- Main Authors Section --}}
<div class='c-section c-section--authors'>
  <div class='o-grid'>
    <div class='c-section-heading'>
      <h2 class='c-section-heading__title u-font-headline u-font-family-sansSerif'>Editorial Team</h2>
    </div>
  </div>
  
  <div class='js-grid o-grid o-grid--3-columns'>
    {{#get 'authors' limit='all'}}
      {{#foreach authors}}
        {{#match name "!=" "Shaurya Parekh"}}
