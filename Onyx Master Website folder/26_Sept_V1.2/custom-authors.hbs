            {{#match name "!=" "Leyla Nasari"}}
              {{#match name "!=" "Anahad Kaur Hanspal"}}
                {{#match name "!=" "Makipan Ketheeswaran"}}
                  {{#match name "!=" "Ben Phillips"}}
                    {{#match name "!=" "Jack Topliss"}}
                        {{#match name "!=" "Dr. Alexander Green"}}
                          {{#match name "!=" "Rhys Manning Garrero"}}
                            {{#match name "!=" "Dr. Luka Dancyger-Stevens"}}
                              {{#match name "!=" "Disha Khanna"}}
                                {{#match name "!=" "Eleanor Bryant"}}
                                  {{#match name "!=" "Rhys Garrero"}}
                                    {{> card-author }}
                                  {{/match}}
                                {{/match}}
                              {{/match}}
